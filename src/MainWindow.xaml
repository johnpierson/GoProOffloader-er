<Window x:Class="GoProOffloaderer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GoProOffloaderer"
        xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
        mc:Ignorable="d"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Title="GoPro Offloaderer" Height="602.999" Width="402" ResizeMode="NoResize">
    <Window.Resources>
        <local:BrushBoolColorConverter x:Key="BConverter"></local:BrushBoolColorConverter>
    </Window.Resources>
    <Grid Grid.Column="1" Grid.Row="0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="120"/>
            <RowDefinition Height="200"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <GroupBox Grid.Row="0" Grid.Column="1" Header="Device Selection" Margin="28 8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="32"/>
                </Grid.RowDefinitions>
                <ComboBox Grid.Row="0" Name="DeviceSelectionComboBox" Margin="24 12" ItemsSource="{Binding Devices}" DisplayMemberPath="DeviceInfo.Name" SelectionChanged="BtnConnect_Click"/>
                <UniformGrid Margin="20 0"  Grid.Row="1" Columns="3">
                    <Button x:Name="btnScanBLE" Content="Scan" Click="BtnScanBLE_Click" Background="White" Margin="4"/>
                    <Button x:Name="btnPair" Content="Pair" Click="BtnPair_Click" Background="White"  Margin="4"/>
                    <Button x:Name="btnConnect" Content="Connect" Click="BtnConnect_Click" Background="White"  Margin="4"/>
                </UniformGrid>
            </Grid>
        </GroupBox>

        <Grid Grid.Column="1" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="275"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="14"/>
                <RowDefinition Height="6"/>
                <RowDefinition Height="32"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <svgc:SvgViewbox Grid.Column="1" Grid.Row="0" Grid.RowSpan="5" Source="/Resources/goProUI.svg"/>
            <Grid Name="Status" Grid.Row="1" Grid.Column="1" Background="Red" Margin="60 0 170 0"></Grid>



            <ProgressBar Grid.Column="1" Grid.Row="2" Margin="105 20 150 0" x:Name="prgBatteryLevel" Value="{Binding BatteryLevel, Mode=OneWay}" ToolTip="{Binding BatteryLevel, Mode=OneWay}" Maximum="100"/>
        </Grid>


        <GroupBox Grid.Row="3" Grid.Column="1" Header="File Import" Margin="28 8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="32"/>
                    <RowDefinition Height="32"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <UniformGrid Margin="20 0"  Grid.Row="0" Columns="2">
                    <Button Content="Get Files" Click="BtnScanBLE_Click" Background="White" Margin="4"/>
                    <Button IsEnabled="False" Content="Download Files" Click="BtnPair_Click" Background="White"  Margin="4"/>
                </UniformGrid>

                <Grid Grid.Row="1" Margin="20 0" >

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0" Margin="4" Content="+" Background="White"></Button>
                    <TextBox Grid.Column="1" Margin="4"></TextBox>
                </Grid>


                <ListView Grid.Row="2" Margin="24 4"></ListView>


            </Grid>
        </GroupBox>

        <TextBlock Grid.Column="1" Grid.Row="4" Name="txtStatusBar" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" FontSize="12" Padding="0,0,0,0"></TextBlock>



    </Grid>


